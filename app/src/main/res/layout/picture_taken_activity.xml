<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/picture_taken_activity_image_view"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_below="@id/picture_taken_activity_edit_text_date"
        android:layout_marginTop="20dp"

        />

        <EditText
            android:id="@+id/picture_taken_activity_edit_text_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Set a title"
            android:maxLength="30"
            android:textSize="16dp"
            />

        <EditText
            android:id="@+id/picture_taken_activity_edit_text_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/picture_taken_activity_edit_text_title"
            android:layout_marginTop="20dp"
            android:hint="Set a date"
            android:maxLength="20"
            android:textSize="16dp"
            />


        <Button
            android:id="@+id/picture_taken_activity_save_image_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:backgroundTint="#59A2BAB7"
            android:onClick="onClick"
            android:text="Save \nimage"
            android:textColor="@color/black"
            android:textSize="20dp"
            />


</RelativeLayout>