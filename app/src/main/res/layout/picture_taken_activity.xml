<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <EditText
        android:id="@+id/picture_taken_activity_edit_text_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:hint="Set a title"
        android:textSize="16dp"
        />

    <EditText
        android:id="@+id/picture_taken_activity_edit_text_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/picture_taken_activity_edit_text_title"
        android:layout_marginTop="20dp"
        android:hint="Set a date"
        android:textSize="16dp"
        />

    <ImageView
        android:id="@+id/picture_taken_activity_image_view"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_below="@id/picture_taken_activity_edit_text_date"
        android:layout_marginTop="20dp"
        />

    <Button
        android:id="@+id/picture_taken_activity_submit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/picture_taken_activity_image_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:backgroundTint="#5900D4BB"
        android:textSize="20dp"
        android:textColor="@color/purple_200"
        android:text="Submit"
        />


</RelativeLayout>