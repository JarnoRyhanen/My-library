<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <SeekBar
        android:id="@+id/card_view_activity_seek_bar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/teal_700"
        android:max="5"
        />

    <SeekBar
        android:id="@+id/card_view_activity_seek_bar_2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#F40A0A"
        android:max="5"
        android:layout_below="@+id/card_view_activity_seek_bar"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_activity_card_view"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/card_view_activity_seek_bar_2"
        android:layout_centerInParent="true"
        app:cardBackgroundColor="@color/purple_200"
        app:cardCornerRadius="4dp"
        app:cardPreventCornerOverlap="true"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Puuha-Pete Card View"
            />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/puuhapete"
            />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_activity_card_view_2"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:layout_below="@+id/card_view_activity_card_view"
        app:cardBackgroundColor="@color/purple_200"
        app:cardCornerRadius="4dp"
        app:cardPreventCornerOverlap="true"
        >

        <ImageView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/lataa"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="StockPhoto CardView"
            />
    </androidx.cardview.widget.CardView>

</RelativeLayout>