<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <EditText
        android:id="@+id/receipt_saving_app_activity_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="Search for your receipts by name or date"
        android:textSize="15dp"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/receipt_saving_app_activity_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/receipt_saving_app_activity_open_camera"
        android:layout_below="@id/receipt_saving_app_activity_text_view"
        />

    <Button
        android:id="@+id/receipt_saving_app_activity_open_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:onClick="onClick"
        android:text="Open camera and \n take a picture"
        />


</RelativeLayout>