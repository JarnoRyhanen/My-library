<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/count_down_timer_relative_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/purple_200"
    >

    <LinearLayout
        android:id="@+id/cdt_linear_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/count_down_timer_hours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:onClick="onClick"
            android:text="00"
            android:textSize="60dp"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/count_down_timer_minutes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:onClick="onClick"
            android:text=":00"
            android:textSize="60dp"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/count_down_timer_seconds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:onClick="onClick"
            android:text=":00"
            android:textSize="60dp"
            android:textColor="@color/black"
            />

    </LinearLayout>

    <Button
        android:id="@+id/count_down_timer_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cdt_linear_layout"
        android:layout_centerInParent="true"
        android:text="Start countdown"
        android:onClick="onClick"
        android:backgroundTint="@color/teal_700"
        />
    <Button
        android:id="@+id/count_down_timer_stop_count_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/count_down_timer_start"
        android:layout_centerInParent="true"
        android:text="Cancel"
        android:onClick="onClick"
        android:backgroundTint="@color/teal_700"
        />
</RelativeLayout>